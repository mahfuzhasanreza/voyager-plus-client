<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.voyeger.MainController"
            stylesheets="@Main.css"
            prefWidth="1400" prefHeight="800">

    <!-- Top Navigation Bar -->
    <top>
        <HBox styleClass="navbar" alignment="CENTER_LEFT" spacing="20">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>

            <Label text="Voyager+" styleClass="app-logo"/>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Navigation Buttons -->
            <Button fx:id="newsFeedBtn" text="ðŸ  News Feed" onAction="#loadNewsFeed" styleClass="nav-btn"/>
            <Button fx:id="tripPlannerBtn" text="âœˆ Plan Trip" onAction="#loadTripPlanner" styleClass="nav-btn"/>
            <Button fx:id="profileBtn" text="ðŸ‘¤ Profile" onAction="#loadProfile" styleClass="nav-btn"/>
            <Button fx:id="settingsBtn" text="âš™ Settings" onAction="#loadSettings" styleClass="nav-btn"/>

            <Separator orientation="VERTICAL"/>

            <!-- User Info -->
            <VBox alignment="CENTER_RIGHT" spacing="2">
                <Label fx:id="currentUserLabel" text="User" styleClass="current-user-label"/>
                <Label text="Online" styleClass="online-status"/>
            </VBox>

        </HBox>
    </top>

    <!-- Center: Dynamic Content Area -->
    <center>
        <BorderPane fx:id="mainContainer" styleClass="main-content">
            <!-- Content will be loaded dynamically here -->
        </BorderPane>
    </center>

</BorderPane>

