<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.voyeger.TripPlannerController"
            stylesheets="@TripPlanner.css"
            prefWidth="600" prefHeight="400">

    <VBox alignment="CENTER" spacing="10" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20"
          AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20">

        <Label text="âœˆ Voyager+ Trip Planner" styleClass="header-label"/>

        <TextField fx:id="titleField" promptText="Enter trip title"/>
        <DatePicker fx:id="datePicker" promptText="Select trip date"/>
        <TextField fx:id="routeField" promptText="Enter travel route"/>
        <TextField fx:id="budgetField" promptText="Enter budget"/>
        <TextArea fx:id="descriptionArea" promptText="Enter trip description"/>

        <HBox spacing="10">
            <RadioButton fx:id="soloTripRadio" text="Solo Trip" toggleGroup="$tripTypeGroup" selected="true"/>
            <RadioButton fx:id="groupTripRadio" text="Group Trip" toggleGroup="$tripTypeGroup"/>
        </HBox>

        <Button text="Create Trip" onAction="#handleCreateTrip" styleClass="primary-btn"/>

        <Label fx:id="statusLabel" textFill="green"/>

    </VBox>
</AnchorPane>
