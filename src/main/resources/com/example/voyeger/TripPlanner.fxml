<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.voyeger.TripPlannerController"
            stylesheets="@TripPlanner.css"
            prefWidth="1200" prefHeight="700">

    <!-- Top: Header -->
    <top>
        <VBox styleClass="header-section">
            <Label text="âœˆ Voyager+ Trip Planner" styleClass="header-label"/>
            <Label text="Create and manage your travel adventures" styleClass="subtitle-label"/>
        </VBox>
    </top>

    <!-- Left: Create Trip Form -->
    <left>
        <VBox spacing="10" styleClass="form-section">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Create New Trip" styleClass="section-title"/>
            <Separator/>

            <TextField fx:id="titleField" promptText="Enter trip title"/>
            <DatePicker fx:id="datePicker" promptText="Select trip date" prefWidth="200"/>
            <TextField fx:id="routeField" promptText="Enter travel route (e.g., Paris â†’ Rome)"/>
            <TextField fx:id="budgetField" promptText="Enter budget (USD)"/>
            <TextArea fx:id="descriptionArea" promptText="Enter trip description" prefRowCount="3"/>

            <VBox spacing="5">
                <Label text="Trip Type:" styleClass="field-label"/>
                <HBox spacing="15">
                    <RadioButton fx:id="soloTripRadio" text="ðŸš¶ Solo Trip" toggleGroup="$tripTypeGroup" selected="true"/>
                    <RadioButton fx:id="groupTripRadio" text="ðŸ‘¥ Group Trip" toggleGroup="$tripTypeGroup"/>
                </HBox>
            </VBox>

            <Button text="Create Trip" onAction="#handleCreateTrip" styleClass="primary-btn" maxWidth="Infinity"/>
            <Label fx:id="statusLabel" textFill="green" wrapText="true"/>

        </VBox>
    </left>

    <!-- Center: Trip Lists -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- My Trips Section -->
            <VBox spacing="5" VBox.vgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="My Trips" styleClass="section-title"/>
                    <Button text="Manage Requests" onAction="#handleManageRequests" styleClass="secondary-btn"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="ðŸ”„ Refresh" onAction="#handleRefresh" styleClass="icon-btn"/>
                </HBox>
                <ListView fx:id="myTripsListView" VBox.vgrow="ALWAYS" styleClass="trip-list"/>
            </VBox>

            <Separator/>

            <!-- Available Trips Section -->
            <VBox spacing="5" VBox.vgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Available Group Trips" styleClass="section-title"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="Request to Join" onAction="#handleRequestToJoin" styleClass="primary-btn"/>
                </HBox>
                <ListView fx:id="availableTripsListView" VBox.vgrow="ALWAYS" styleClass="trip-list"/>
            </VBox>

        </VBox>
    </center>

    <!-- Right: Trip Details -->
    <right>
        <VBox spacing="10" styleClass="details-section">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Trip Details" styleClass="section-title"/>
            <Separator/>
            <TextArea fx:id="tripDetailsArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" styleClass="details-area"/>

        </VBox>
    </right>

</BorderPane>
