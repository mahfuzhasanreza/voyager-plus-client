<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.voyeger.NotepadController" spacing="20" style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <!-- Header -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label text="📝 Trip Notepad" style="-fx-text-fill: #2c3e50; -fx-font-size: 28px; -fx-font-weight: bold;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="newNoteBtn" text="+ New Note" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;" />
    </HBox>

    <!-- Search and Filter -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Search notes..." style="-fx-pref-width: 300; -fx-pref-height: 35;" />
        <ComboBox fx:id="tripFilter" promptText="Filter by trip" style="-fx-pref-width: 200; -fx-pref-height: 35;" />
        <ComboBox fx:id="typeFilter" promptText="Filter by type" style="-fx-pref-width: 150; -fx-pref-height: 35;" />
    </HBox>

    <!-- Main Content -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- Notes List -->
        <VBox spacing="10" style="-fx-pref-width: 300; -fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15" />
            </padding>
            <Label text="My Notes" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <ListView fx:id="notesListView" VBox.vgrow="ALWAYS" style="-fx-border-color: #eee;" />
        </VBox>

        <!-- Note Editor -->
        <VBox spacing="15" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>

            <!-- Note Header -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <TextField fx:id="titleField" promptText="Note Title" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-pref-width: 400;" />
                <Region HBox.hgrow="ALWAYS" />
                <ComboBox fx:id="tripSelector" promptText="Select Trip" style="-fx-pref-width: 200;" />
                <ComboBox fx:id="noteTypeSelector" promptText="Note Type" style="-fx-pref-width: 150;" />
            </HBox>

            <!-- Note Content -->
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <Label text="Content:" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <TextArea fx:id="contentArea" promptText="Write your note here..." VBox.vgrow="ALWAYS" style="-fx-border-color: #ddd; -fx-border-radius: 5;" />
            </VBox>

            <!-- Packing List Specific -->
            <VBox fx:id="packingListSection" spacing="10" visible="false">
                <Label text="Packing Items:" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <HBox spacing="10">
                    <TextField fx:id="newItemField" promptText="Add new item..." HBox.hgrow="ALWAYS" />
                    <Button fx:id="addItemBtn" text="Add" style="-fx-background-color: #27ae60; -fx-text-fill: white;" />
                </HBox>
                <ListView fx:id="packingListView" style="-fx-pref-height: 200; -fx-border-color: #eee;" />
            </VBox>

            <!-- Action Buttons -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="deleteBtn" text="Delete" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="cancelBtn" text="Cancel" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" />
                <Button fx:id="saveBtn" text="Save Note" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" />
            </HBox>
        </VBox>
    </HBox>
</VBox>