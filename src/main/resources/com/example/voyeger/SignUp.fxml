<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.voyeger.SignUpController"
            stylesheets="@Auth.css"
            prefWidth="1000" prefHeight="700">

    <!-- Left Side - Image/Branding -->
    <left>
        <VBox styleClass="auth-left-panel" alignment="CENTER" spacing="20">
            <Label text="✈" styleClass="auth-logo-icon"/>
            <Label text="Voyager+" styleClass="auth-logo-text"/>
            <Label text="Start Your Journey Today" styleClass="auth-tagline"/>
            <VBox spacing="15" alignment="CENTER" styleClass="benefits-box">
                <Label text="✓ Connect with travelers worldwide" styleClass="benefit-item"/>
                <Label text="✓ Create and join group trips" styleClass="benefit-item"/>
                <Label text="✓ Share your travel stories" styleClass="benefit-item"/>
                <Label text="✓ Find travel companions" styleClass="benefit-item"/>
            </VBox>
        </VBox>
    </left>

    <!-- Right Side - Sign Up Form -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="auth-scroll">
            <VBox alignment="CENTER" spacing="25" styleClass="auth-form-container">
                <padding>
                    <Insets top="50" right="60" bottom="50" left="60"/>
                </padding>

                <!-- Header -->
                <VBox alignment="CENTER" spacing="8">
                    <Label text="Create Account" styleClass="form-title"/>
                    <Label text="Join the Voyager+ community" styleClass="form-subtitle"/>
                </VBox>

                <!-- Form Fields -->
                <VBox spacing="20" maxWidth="380">

                    <VBox spacing="8">
                        <Label text="Full Name" styleClass="field-label"/>
                        <TextField fx:id="fullNameField" promptText="John Doe" styleClass="auth-field"/>
                    </VBox>

                    <VBox spacing="8">
                        <Label text="Username" styleClass="field-label"/>
                        <TextField fx:id="usernameField" promptText="johndoe123" styleClass="auth-field"/>
                    </VBox>

                    <VBox spacing="8">
                        <Label text="Email Address" styleClass="field-label"/>
                        <TextField fx:id="emailField" promptText="john@example.com" styleClass="auth-field"/>
                    </VBox>

                    <VBox spacing="8">
                        <Label text="Password" styleClass="field-label"/>
                        <PasswordField fx:id="passwordField" promptText="Minimum 6 characters" styleClass="auth-field"/>
                    </VBox>

                    <VBox spacing="8">
                        <Label text="Confirm Password" styleClass="field-label"/>
                        <PasswordField fx:id="confirmPasswordField" promptText="Re-enter password" styleClass="auth-field"/>
                    </VBox>

                    <!-- Status Label -->
                    <Label fx:id="statusLabel" wrapText="true" styleClass="status-label"/>

                    <!-- Loading Indicator -->
                    <HBox alignment="CENTER">
                        <ProgressIndicator fx:id="loadingIndicator" prefWidth="40" prefHeight="40"/>
                    </HBox>

                    <!-- Sign Up Button -->
                    <Button text="Create Account" onAction="#handleSignUp" styleClass="btn-primary" maxWidth="Infinity" prefHeight="50"/>

                    <!-- Sign In Link -->
                    <HBox alignment="CENTER" spacing="5">
                        <Label text="Already have an account?" styleClass="link-text"/>
                        <Hyperlink text="Sign In" onAction="#handleGoToSignIn" styleClass="auth-link"/>
                    </HBox>

                    <!-- Back Button -->
                    <Button text="← Back to Welcome" onAction="#handleBackToWelcome" styleClass="btn-back"/>

                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>

